CREATE DATABASE threedpw;
USE threedpw;

CREATE TABLE USUARIO(
id_user int(2) UNIQUE,
username varchar(10),
pass_word varchar(8),
name_u varchar(40),
email varchar(30),
phone varchar(11)
);

CREATE TABLE PRINTER(
id_printer int(2) UNIQUE,
iduser int(2),
name_p varchar(20),
iprouter varchar(12),
iplocal varchar(12),
manufacturer varchar(20),
model varchar(20),
firmware varchar(20),
diameter int(4),
nozzle int(4)
);

CREATE TABLE VOLUME(
id_volume int(2),
x int(2),
y int(2),
z int(2)
);

CREATE TABLE PERFIL(
id_profile int(2) UNIQUE,
idprinter int(2),
name_o varchar(20),
height int(1),
wall int(1),
tempext int(3),
tempbed int(3),
speed int(3),
cooling int(1),
support int(1),
brim int(1)
);

